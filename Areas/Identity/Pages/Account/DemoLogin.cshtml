@page
@model DemoLoginModel


@{
    ViewData["Title"] = "Demo Log in";
}

<style>
    .background {
        background: url(/img/pexels-fauxels-3183150.jpg) no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }

    .labels {
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<div class="container-fluid background ">
    <div class="card pt-4" style=" width: 25rem; margin-left: 30rem; padding: 20px; margin-top: 10rem; border-radius: 3%;">
        <img src="~/img/wasp-bee-svgrepo-com.svg" alt="" width="100" height="100" class="card-img-top">
        <div class="">
            <form method="post">
                <div class="form-group m-2">
                    <button type="submit" class="btn p-2 btn-primary" asp-route-user="admin">Demo Admin</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group m-2">
                    <button type="submit" class="btn p-2 btn-primary" asp-route-user="PM">Demo Project Manager</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group m-2">
                    <button type="submit" class="btn p-2 btn-primary" asp-route-user="developer">Demo Developer</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group m-2">
                    <button type="submit" class="btn p-2  btn-primary" asp-route-user="submitter">Demo Submitter</button>
                </div>
            </form>
        </div>
        </div>
    </div>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
