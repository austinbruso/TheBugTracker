@page
@model LoginModel


@{
    ViewData["Title"] = "Login";
}

<style>
    .background {
        background: url(/img/pexels-fauxels-3183150.jpg) no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }

    .labels {
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<div class="container-fluid background ">
    <div class="card pt-4" style=" width: 25rem; margin-left: 30rem; padding: 20px; margin-top: 10rem; border-radius: 3%;">
        <img src="~/img/wasp-bee-svgrepo-com.svg" alt="" width="100" height="100" class="card-img-top">
        <div class="login mt-3 d-flex justify-content-center">
            <h5>Log In Here or Use Demo Account Below</h5>
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group labels">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group labels">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>

            <div class="form-group mt-2">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>



        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <form method="post">
                        <div class="form-group m-2">
                            <button type="submit" class="btn p-2 btn-lg btn-outline-primary" asp-route-user="admin">Demo Admin</button>
                        </div>
                    </form>
                </div>

                <div class="col">
                    <form method="post">
                        <div class="form-group m-2">
                            <button type="submit" class="btn p-2 btn-lg btn-outline-primary" asp-route-user="PM">Project Manager</button>
                        </div>
                    </form>
                </div>
                <div class="col">
                    <form method="post">
                        <div class="form-group m-2">
                            <button type="submit" class="btn p-2 btn-lg btn-outline-primary" asp-route-user="developer">Demo Developer</button>
                        </div>
                    </form>
                </div>
                <div class="col">
                    <form method="post">
                        <div class="form-group m-2">
                            <button type="submit" class="btn p-2 btn-lg  btn-outline-primary" asp-route-user="submitter">Demo Submitter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
