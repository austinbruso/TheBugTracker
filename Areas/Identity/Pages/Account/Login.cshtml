@page
@model LoginModel

@using TheBugTrackerProject.Models.Enums


@{
    ViewData["Title"] = "Log in";
}

<style>
    .background {
        background: url(/img/pexels-fauxels-3183150.jpg) no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }
</style>

    <div class="container-fluid background ">
        <div class="card pt-5 " style=" width: 25rem; margin-left: 30rem; padding: 20px; margin-top: 20rem; border-radius: 3%;">
            
            <form id="account" method="post">
                <h4>Login to your account</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>

                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>

            <h5 class="mt-3 d-flex justify-content-center">Or </h5>


            <form method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-route-user="admin">Demo Admin</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-route-user="PM">Demo Project Manager</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-route-user="developer">Demo Developer</button>
                </div>
            </form>
            <form method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-route-user="submitter">Demo Submitter</button>
                </div>
            </form>
            </div>
        </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
